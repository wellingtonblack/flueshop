<section
  class="section"
  data-section-id="{{ section.id }}"
  data-section-type="whatsapp">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>

        {%- if section.settings.link_title != blank -%}
          <a href="{{ section.settings.link_url | default: product.url | default: '#' }}" class="section__action-link link">{{ section.settings.link_title }} {% render 'icon', icon: 'tail-right' %}</a>
        {%- endif -%}
      </header>
    {%- endif -%}
  </div>

  <div class="container">
    <div class="scroller">
      <div class="scroller__inner">
        <div class="block-list">
          {%- for block in section.blocks -%}
            <div class="block-list__item">
              <img
                class="whatsapp"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}">
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>



</section>

{% schema %}
  {
    "name": "Whatsapp",
    "settings": [
      {
        "type": "range",
        "id": "items_per_row",
        "min": 1,
        "max": 4,
        "step": 1,
        "label": "Items per row on desktop",
        "default": 2
      }, {
        "type": "checkbox",
        "id": "stack_mobile",
        "label": "Stack on mobile",
        "default": false
      }, {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Your text"
      }
    ],
    "blocks": [
      {
        "type": "whatsapp",
        "name": "Whatsapp",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Text",
        "name": "Whatsapp",
        "settings": {},
        "blocks": [
          {
            "type": "whatsapp"
          }, {
            "type": "whatsapp"
          }
        ]
      }
    ]
  }
{% endschema %}