{% render 'product-similars',
  title: section.settings.title_text
  columns_desktop: section.settings.columns_desktop
  columns_mobile: section.settings.columns_mobile
  show_shelf: section.settings.show_shelf
%}

{% schema %}
  {
    "name": "Product Similars",
    "settings": [
      {
      "type": "checkbox",
      "id": "show_shelf",
      "label": "Show",
      "default": true
      },
      {
        "type": "text",
        "id": "title_text",
        "label": "Title"
      },
      {
      "type": "header",
      "content": "NÃºmero de colunas"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 7,
      "step": 1,
      "default": 4,
      "label": "Desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Mobile",
      "options": [
        {
          "value": "1",
          "label": "1 Coluna"
        },
        {
          "value": "2",
          "label": "2 Colunas"
        }
      ]
    }
    ]
  }
{% endschema %}